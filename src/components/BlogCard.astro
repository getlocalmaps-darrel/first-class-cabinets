---
const { title, description, publishDate, category, readingTime, slug } = Astro.props;
const dateStr = new Date(publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
---

<a href={`/blog/${slug}/`} class="group block bg-white border border-zinc-200 rounded-sm overflow-hidden hover:shadow-xl transition-all duration-300">
  <div class="p-6">
    <div class="flex items-center gap-3 mb-3">
      <span class="text-[10px] font-bold uppercase tracking-[0.15em] text-yellow-600 bg-yellow-600/10 px-2 py-1 rounded-sm">{category}</span>
      <span class="text-[10px] text-zinc-400 uppercase tracking-widest">{readingTime} read</span>
    </div>
    <h3 class="font-serif text-xl font-bold text-zinc-900 group-hover:text-yellow-600 transition-colors duration-300 mb-2 line-clamp-2">{title}</h3>
    <p class="text-zinc-500 text-sm leading-relaxed line-clamp-3 mb-4">{description}</p>
    <div class="flex items-center justify-between pt-4 border-t border-zinc-100">
      <span class="text-xs text-zinc-400">{dateStr}</span>
      <span class="text-xs font-bold text-yellow-600 uppercase tracking-widest group-hover:translate-x-1 transition-transform duration-300">Read More &rarr;</span>
    </div>
  </div>
</a>
