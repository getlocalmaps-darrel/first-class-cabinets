---
// src/components/RecentProjects.astro
import img1 from '../assets/murrieta-kitchen-remodeling-project-1.jpg';
import img2 from '../assets/murrieta-kitchen-remodeling-project-2.jpg';
import img3 from '../assets/murrieta-kitchen-remodeling-project-3.jpg';

const projects = [
  {
    title: "Los Alamos Hills Custom Kitchen",
    location: "Murrieta • Los Alamos Hills",
    description: "A premium 2025 kitchen remodel near Murrieta Oaks featuring custom-milled cabinetry and handcrafted fireplace built-ins.",
    image: img1.src,
    link: "/projects/murrieta-home-remodel",
    date: "2025"
  },
  {
    title: "Modern Build-In Project",
    location: "Temecula, CA",
    description: "New 2025 handcrafted cabinetry and finish carpentry details. Full project gallery coming soon.",
    image: img2.src,
    link: "#",
    date: "2025"
  },
  {
    title: "Custom Woodwork Suite",
    location: "Murrieta, CA",
    description: "Luxury bathroom cabinetry and custom trim work south of The Orchard. Full project gallery coming soon.",
    image: img3.src,
    link: "#",
    date: "2025"
  }
];
---

<section class="py-20 bg-zinc-950 border-y border-zinc-800 shadow-[inner_0_2px_10px_rgba(0,0,0,0.5)] overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="text-center max-w-4xl mx-auto mb-16 reveal">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6 leading-tight">
        Recent Kitchen Cabinet Remodeling Projects in Murrieta
      </h2>
      <div class="h-1 w-20 bg-yellow-600 mx-auto rounded-full mb-6"></div>
      <p class="text-zinc-400 font-bold uppercase tracking-[0.2em] text-xs">
        Crafting Luxury Woodwork Across the Temecula Valley • 2025 Portfolio
      </p>
    </div>

    <div 
        id="project-slider"
        class="flex flex-nowrap -mx-6 px-6 md:mx-0 md:px-0 md:grid md:grid-cols-3 gap-6 md:gap-10 overflow-x-auto pb-8 snap-x snap-mandatory no-scrollbar"
    >
      {projects.map((project, index) => (
        <a 
          href={project.link} 
          /* FIX 2: Changed min-w from [85%] to [75vw]. 
             This forces the next card to peek in by 25% of the screen width.
          */
          class="min-w-[75vw] md:min-w-0 snap-center group block reveal" 
          style={`transition-delay: ${index * 150}ms`}
        >
          <div class="relative aspect-[16/10] overflow-hidden rounded-sm mb-6 shadow-2xl border border-zinc-800 bg-zinc-900">
            <img 
              src={project.image} 
              alt={`${project.title} - Custom Cabinetry Murrieta`} 
              loading="lazy"
              class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 opacity-90 group-hover:opacity-100"
            />
          </div>
          
          <div class="px-2 text-center">
            <div class="flex items-center justify-center gap-2 mb-3">
                <span class="text-yellow-600 font-bold text-[10px] uppercase tracking-[0.15em]">{project.location}</span>
                <span class="text-zinc-500 font-bold text-[10px] uppercase tracking-[0.15em]">{project.date}</span>
            </div>
            <h3 class="text-2xl font-serif font-bold text-white mb-4 group-hover:text-yellow-500 transition leading-snug">
                {project.title}
            </h3>
            <div class="inline-flex items-center gap-3 text-yellow-600 font-bold text-[11px] uppercase tracking-[0.2em] border-b-2 border-yellow-600/30 pb-1 group-hover:border-yellow-600 transition-all">
              Explore Project
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-4 flex justify-center items-center gap-4 md:hidden reveal">
        <div class="w-48 h-1.5 bg-zinc-800 rounded-full overflow-hidden">
            <div id="scroll-progress" class="w-1/3 h-full bg-yellow-600 transition-all duration-150"></div>
        </div>
    </div>
  </div>
</section>

<script>
    // FIX 4: Adjusted threshold so hidden images reveal sooner on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.classList.add('active');
        }
      });
    }, { 
        threshold: 0.05, // Lower threshold means it triggers as soon as 5% is visible
        rootMargin: '0px 100px 0px 100px' // Triggers 100px before it enters the screen
    });

    document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));

    const slider = document.getElementById('project-slider');
    const progressBar = document.getElementById('scroll-progress');
    if (slider && progressBar) {
        slider.addEventListener('scroll', () => {
            const scrollPercentage = (slider.scrollLeft / (slider.scrollWidth - slider.clientWidth)) * 100;
            progressBar.style.width = `${Math.max(20, scrollPercentage)}%`;
        });
    }
</script>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
  
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .reveal.active {
    opacity: 1;
    transform: translateY(0);
  }
</style>