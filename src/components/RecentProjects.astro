---
// src/components/RecentProjects.astro
import img1 from '../assets/murrieta-kitchen-remodeling-project-1.jpg';
import img2 from '../assets/murrieta-kitchen-remodeling-project-2.jpg';
import img3 from '../assets/murrieta-kitchen-remodeling-project-3.jpg';

const projects = [
  {
    title: "Los Alamos Hills Custom Kitchen",
    location: "Murrieta • Los Alamos Hills",
    description: "A premium 2025 kitchen remodel near Murrieta Oaks featuring custom-milled cabinetry and handcrafted fireplace built-ins.",
    image: img1.src,
    link: "/projects/murrieta-home-remodel",
    date: "2025"
  },
  {
    title: "Modern Build-In Project",
    location: "Temecula, CA",
    description: "New 2025 handcrafted cabinetry and finish carpentry details. Full project gallery coming soon.",
    image: img2.src,
    link: "#",
    date: "2025"
  },
  {
    title: "Custom Woodwork Suite",
    location: "Murrieta, CA",
    description: "Luxury bathroom cabinetry and custom trim work south of The Orchard. Full project gallery coming soon.",
    image: img3.src,
    link: "#",
    date: "2025"
  }
];
---

<section class="py-24 bg-white border-t border-zinc-100">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="text-center max-w-4xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-zinc-900 mb-6 leading-tight">
        Recent Kitchen Cabinet Remodeling Projects in Murrieta
      </h2>
      <div class="h-1 w-20 bg-yellow-600 mx-auto rounded-full mb-6"></div>
      <p class="text-zinc-500 font-bold uppercase tracking-[0.2em] text-xs">
        Crafting Luxury Woodwork Across the Temecula Valley • 2025 Portfolio
      </p>
    </div>

    <div 
        id="project-slider"
        class="flex flex-nowrap md:grid md:grid-cols-3 gap-6 md:gap-10 overflow-x-auto pb-8 snap-x snap-mandatory no-scrollbar"
    >
      {projects.map((project) => (
        <a href={project.link} class="min-w-[85%] md:min-w-0 snap-center group block">
          <div class="relative aspect-[16/10] overflow-hidden rounded-sm mb-6 shadow-lg border border-zinc-50 bg-zinc-100">
            <img 
              src={project.image} 
              alt={`${project.title} - Custom Cabinetry Murrieta ${project.date}`} 
              loading="lazy"
              class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
            />
          </div>
          
          <div class="px-2 text-center">
            <div class="flex items-center justify-center gap-2 mb-3">
                <span class="text-yellow-600 font-bold text-[10px] uppercase tracking-[0.15em]">{project.location}</span>
                <span class="text-zinc-400 font-bold text-[10px] uppercase tracking-[0.15em]">{project.date}</span>
            </div>
            <h3 class="text-2xl font-serif font-bold text-zinc-900 mb-4 group-hover:text-yellow-700 transition leading-snug">
                {project.title}
            </h3>
            <div class="inline-flex items-center gap-3 text-zinc-900 font-bold text-[11px] uppercase tracking-[0.2em] border-b-2 border-yellow-600 pb-1">
                Explore Project
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-8 flex justify-center items-center gap-4 md:hidden">
        <span class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest animate-pulse">Swipe to View</span>
        <div class="w-32 h-1 bg-zinc-100 rounded-full overflow-hidden">
            <div id="scroll-progress" class="w-1/3 h-full bg-yellow-600 transition-all duration-150"></div>
        </div>
    </div>

  </div>
</section>

<script>
    const slider = document.getElementById('project-slider');
    const progressBar = document.getElementById('scroll-progress');

    if (slider && progressBar) {
        slider.addEventListener('scroll', () => {
            const scrollPercentage = (slider.scrollLeft / (slider.scrollWidth - slider.clientWidth)) * 100;
            progressBar.style.width = `${Math.max(20, scrollPercentage)}%`;
        });
    }
</script>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>