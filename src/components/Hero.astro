---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import image1 from '../assets/hero-kitchen.jpg';
import image2 from '../assets/kitchen-2.jpg';
---

<section class="relative h-screen w-full overflow-hidden flex items-center justify-center bg-black">
  <div class="absolute inset-0 z-0 animate-slideshow">
    <Image 
      src={image1} 
      alt="Custom Kitchen Cabinets Murrieta" 
      class="w-full h-full object-cover" 
      width={1200}
      height={800}
      loading="eager" 
      fetchpriority="high"
      decoding="sync"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="absolute inset-0 z-0 animate-slideshow delay-animation">
    <Image 
      src={image2} 
      alt="Finish Carpentry Murrieta" 
      class="w-full h-full object-cover" 
      width={1200}
      height={800}
      loading="eager"
      decoding="async"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="relative z-10 text-center text-white px-4 max-w-5xl mx-auto pt-20 md:pt-44">
    <h1 class="text-[clamp(2.2rem,8vw,4.5rem)] font-serif font-bold mb-3 md:mb-6 drop-shadow-lg leading-tight opacity-0 animate-fade-up" style="animation-delay: 0.4s;">
      First Class Woodworks: <br class="md:hidden"/><span class="text-yellow-500 italic">Murrieta's Premier Cabinet Makers.</span>
    </h1>

    <p class="text-sm md:text-xl lg:text-2xl font-light mb-6 md:mb-10 text-gray-100 max-w-3xl mx-auto opacity-0 animate-fade-up leading-relaxed" style="animation-delay: 0.6s;">
      Providing expert kitchen remodeling, custom cabinetry, and master finish carpentry for homes in the Temecula Valley. [cite: 38, 39]
    </p>

    <div class="flex flex-wrap justify-center items-center gap-3 md:gap-6 mb-8 md:mb-12 opacity-0 animate-fade-up" style="animation-delay: 0.7s;">
      <span class="text-[9px] uppercase tracking-[0.2em] text-zinc-400 font-bold border-r border-zinc-700 pr-3 md:pr-6 line-clamp-1">Verified:</span>
      <span class="text-[10px] md:text-xs font-bold text-white/90">5.0 Star Google Rated</span>
      <span class="text-[10px] md:text-xs font-bold text-white/90">A+ BBB Accredited</span>
      <span class="text-[10px] md:text-xs font-bold text-white/90">Licensed Pro</span>
    </div>

    <div class="flex flex-col md:flex-row gap-3 md:gap-4 justify-center opacity-0 animate-fade-up" style="animation-delay: 0.8s;">
      <a href="/contact" class="bg-yellow-600 text-zinc-950 px-8 py-3 md:py-4 font-bold uppercase tracking-wide hover:bg-yellow-700 transition duration-300 rounded-sm text-sm md:text-base">
        Get a Quote
      </a>
      <a href="/gallery" class="border-2 border-white text-white px-8 py-3 md:py-4 font-bold uppercase tracking-wide hover:bg-white hover:text-slate-900 transition duration-300 rounded-sm text-sm md:text-base">
        View Gallery
      </a>
    </div>
  </div>
</section>

<style>
  /* Ken Burns Slideshow [cite: 40-44] */
  @keyframes kenburns {
    0% { opacity: 0; transform: scale(1); }
    10% { opacity: 1; }
    50% { opacity: 1; transform: scale(1.4); }
    60% { opacity: 0; transform: scale(1.5); }
    100% { opacity: 0; transform: scale(1); }
  }
  .animate-slideshow {
    opacity: 0; 
    animation: kenburns 16s ease-in-out infinite;
  }
  .delay-animation {
    animation-delay: 8s;
  }

  /* Fade Up Animation [cite: 45, 46] */
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-up {
    animation: fadeUp 0.8s ease-out forwards;
  }
</style>