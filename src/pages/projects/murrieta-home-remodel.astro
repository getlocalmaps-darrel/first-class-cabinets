---
// src/pages/projects/murrieta-home-remodel.astro
import MainLayout from '../../layouts/MainLayout.astro';

// 1. IMAGE IMPORTS
import img1 from '../../assets/murrieta-kitchen-remodeling-project-1.jpg';
import img2 from '../../assets/murrieta-kitchen-remodeling-project-2.jpg';
import img3 from '../../assets/murrieta-kitchen-remodeling-project-3.jpg';
import img4 from '../../assets/murrieta-kitchen-remodeling-project-4.jpg';

const images = [
  { src: img1.src, alt: "Custom Kitchen Cabinets in Los Alamos Hills Murrieta 2025" },
  { src: img2.src, alt: "Modern Fireplace Build-In near Murrieta Oaks" },
  { src: img3.src, alt: "Finish carpentry details in Murrieta CA" },
  { src: img4.src, alt: "Luxury kitchen remodeling south of The Orchard" }
];

// 2. SEO SCHEMA FOR GOOGLE & AI
const projectSchema = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  "name": "First Class Woodworks - Los Alamos Hills Project",
  "description": "2025 Custom kitchen remodeling and finish carpentry project in Los Alamos Hills, Murrieta.",
  "url": "https://firstclasswoodworks.com/projects/murrieta-home-remodel",
  "datePublished": "2025-01-07",
  "location": {
    "@type": "Place",
    "name": "Los Alamos Hills Residence",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Los Alamos Hills",
      "addressLocality": "Murrieta",
      "addressRegion": "CA",
      "postalCode": "92563",
      "addressCountry": "US"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "33.58726883",
      "longitude": "-117.17280579"
    }
  }
};
---

<MainLayout 
  title="Los Alamos Hills Kitchen Remodel | Murrieta 2025" 
  description="Explore our 2025 custom kitchen cabinetry and fireplace remodel in the Los Alamos Hills community of Murrieta, CA near Murrieta Oaks."
>
  <script type="application/ld+json" set:html={JSON.stringify(projectSchema)} />

  <link rel="stylesheet" href="https://unpkg.com/photoswipe/dist/photoswipe.css">

  <article class="pt-32 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      
      <header class="max-w-3xl mx-auto text-center mb-16 reveal">
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-zinc-900 mb-6 leading-tight">
          Los Alamos Hills <span class="text-yellow-600 italic">Project</span>
        </h1>
        
        <div class="flex flex-col md:flex-row items-center justify-center gap-4 text-xs font-bold uppercase tracking-[0.3em] text-zinc-400">
            <span class="text-yellow-600">Murrieta, California</span>
            <span class="hidden md:block text-zinc-200">•</span>
            <span>Completed January 2025</span>
            <span class="hidden md:block text-zinc-200">•</span>
            <span class="text-zinc-500">33.5872° N, 117.1728° W</span>
        </div>
        <div class="h-px w-24 bg-yellow-600/30 mx-auto mt-10"></div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-24 items-start">
        <div class="lg:col-span-7 text-lg text-zinc-600 leading-relaxed space-y-6 reveal">
          <h2 class="text-2xl font-serif font-bold text-zinc-900">Premium Woodworking in Murrieta’s Premier Neighborhood</h2>
          <p>
            This 2025 transformation by <a href="/" class="text-yellow-600 font-bold hover:underline">First Class Woodworks</a> took us to the prestigious <strong>Los Alamos Hills</strong> community, 
            nestled near <strong>Murrieta Oaks</strong> and just south of <strong>The Orchard</strong>[cite: 23]. 
            This area of Murrieta demands a level of detail that only a "True Finish Carpenter" can provide[cite: 24].
          </p>
          <p>
            The homeowners sought to elevate their living space with <strong>100% in-house custom cabinetry</strong> designed specifically for their unique floor plan[cite: 25]. 
            Unlike prefabricated units found in big-box stores, our cabinetry is engineered to maximize every square inch, 
            providing a seamless kitchen layout that flows effortlessly into a bespoke fireplace surround[cite: 26].
          </p>
          <p>
            The project features precision-milled trim work and handcrafted build-ins that anchor the room. 
            By building everything locally in our shop, we ensure that the quality of wood and the level of finishing 
            surpass industry standards, creating a lasting value for this 92563-area estate.
          </p>
          <h2 class="text-2xl font-serif font-bold text-zinc-900 pt-4">Serving the Murrieta Community</h2>
          <p>
            Whether we are working in <strong>Bear Creek</strong>, <strong>La Cresta</strong>, or right here in <strong>Los Alamos Hills</strong>, 
            our goal is to set the standard for luxury remodeling in the Temecula Valley. 
            By focusing on the structural integrity and aesthetic flow of the cabinetry, we transform standard kitchens into 
            one-of-a-kind architectural statements.
          </p>
        </div>
        
        <div class="lg:col-span-5 bg-zinc-50 p-10 rounded-sm border border-zinc-100 reveal delay-200 sticky top-32">
          <h3 class="font-serif font-bold text-2xl mb-6 text-zinc-900 underline decoration-yellow-600 underline-offset-8">Project Details</h3>
          <ul class="space-y-4">
            <li class="flex flex-col">
              <span class="text-[10px] font-black uppercase tracking-widest text-yellow-600">Location</span>
              <span class="text-zinc-800 font-bold">Los Alamos Hills, Murrieta</span>
            </li>
            <li class="flex flex-col pt-2">
              <span class="text-[10px] font-black uppercase tracking-widest text-yellow-600">Services</span>
              <span class="text-zinc-800 font-bold">Kitchen & Living Room Remodel</span>
            </li>
             <li class="flex flex-col pt-2">
              <span class="text-[10px] font-black uppercase tracking-widest text-yellow-600">Specialty</span>
              <span class="text-zinc-800 font-bold">Custom Fireplace Build-Ins</span>
            </li>
            <li class="flex flex-col pt-4">
                <a href="/contact" class="text-center bg-zinc-900 text-white py-3 font-bold text-sm uppercase tracking-widest hover:bg-yellow-600 transition">
                    Get a Murrieta Quote
                </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-20" id="project-gallery">
        {images.map((img, index) => (
          <div class="reveal" style={`transition-delay: ${index * 100}ms`}>
            <a href={img.src} class="pswp-project-link group relative aspect-[4/5] overflow-hidden rounded-sm shadow-sm cursor-zoom-in bg-zinc-200 block" data-pswp-width="1200" data-pswp-height="1600">
              <img src={img.src} alt={img.alt} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            </a>
          </div>
        ))}
      </div>

      <div class="pt-16 border-t border-zinc-100 flex flex-col md:flex-row justify-between items-center gap-8 reveal">
        <a href="/gallery" class="flex items-center gap-3 text-zinc-400 hover:text-zinc-900 font-bold uppercase tracking-widest text-xs transition">
            View Project Gallery
        </a>
        <a href="/projects/menifee-lakes-remodel" class="group flex items-center gap-4 text-right">
          <div class="flex flex-col">
            <span class="text-[10px] font-black text-yellow-600 uppercase tracking-widest">Next Project</span>
            <span class="text-zinc-900 font-serif font-bold group-hover:text-yellow-600 transition">Menifee Lakes Project →</span>
          </div>
        </a>
      </div>
    </div>
  </article>

  <script>
    import PhotoSwipeLightbox from 'https://unpkg.com/photoswipe/dist/photoswipe-lightbox.esm.js';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#project-gallery',
      children: '.pswp-project-link',
      pswpModule: () => import('https://unpkg.com/photoswipe/dist/photoswipe.esm.js')
    });
    lightbox.init();

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) entry.target.classList.add('active');
      });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
  </script>

  <style>
    .pswp-project-link img { object-fit: cover; display: block; }
    .reveal { opacity: 0; transform: translateY(20px); transition: all 0.8s ease-out; }
    .reveal.active { opacity: 1; transform: translateY(0); }
    .delay-200 { transition-delay: 0.2s; }
  </style>
</MainLayout>