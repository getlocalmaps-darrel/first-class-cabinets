  "address": {
    "@type": "PostalAddress",
    "streetAddress": "24491 Avenida Arconte",
    "addressLocality": "Murrieta",
    "addressRegion": "CA",
    "postalCode": "92562",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 33.4936,
    "longitude": -117.1484
  },
  "areaServed": ["Temecula", "Wine Country", "De Luz", "Old Town Temecula", "Redhawk", "Harveston"],
