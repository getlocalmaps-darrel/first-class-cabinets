---
import MainLayout from '../../layouts/MainLayout.astro';
import Services from '../../components/Services.astro';

const phone = "(951) 973-1265";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Kitchen Remodeling",
  "name": "Kitchen Remodeling in Murrieta, CA",
  "description": "First Class WoodWorks provides full-service kitchen remodeling in Murrieta and Temecula. Custom cabinetry, granite countertops, and finish carpentry — all managed by one team, zero subcontractors on the cabinet work.",
  "provider": {
    "@type": "HomeAndConstructionBusiness",
    "name": "First Class WoodWorks",
    "telephone": "+1-951-973-1265",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "24491 Avenida Arconte",
      "addressLocality": "Murrieta",
      "addressRegion": "CA",
      "postalCode": "92562",
      "addressCountry": "US"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "5.0",
      "reviewCount": "30"
    }
  },
  "areaServed": ["Murrieta", "Temecula", "Menifee", "Wildomar", "Perris", "Lake Elsinore", "French Valley", "Winchester", "Canyon Lake", "Fallbrook"],
  "knowsAbout": [
    "Kitchen Remodeling",
    "Custom Kitchen Cabinets",
    "Kitchen Island Design",
    "Cabinet Fabrication",
    "Kitchen Layout Optimization",
    "Granite Countertops",
    "Luxury Kitchen Renovation",
    "Finish Carpentry"
  ],
  "relatedService": [
    { "@type": "Service", "name": "Custom Kitchen Cabinets", "url": "https://www.firstclasswoodworks.com/services/custom-kitchen-cabinets" },
    { "@type": "Service", "name": "Granite Countertop Installation", "url": "https://www.firstclasswoodworks.com/services/granite-countertops" },
    { "@type": "Service", "name": "Bathroom Remodeling & Custom Vanities", "url": "https://www.firstclasswoodworks.com/services/bathroom-remodeling" }
  ]
