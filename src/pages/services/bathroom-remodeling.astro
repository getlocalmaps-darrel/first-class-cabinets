---
import MainLayout from '../../layouts/MainLayout.astro';
import Services from '../../components/Services.astro';

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Luxury Bathroom Remodeling & Custom Vanities",
  "description": "High-end bathroom remodeling in Murrieta. We specialize in moisture-resistant custom vanities and furniture-grade cabinetry for master suites.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "First Class Woodworks"
  },
  "knowsAbout": ["Moisture-Resistant Bathroom Vanities", "Finish Carpentry", "3D Cabinet Design", "Master Suite Transformations"],
  "areaServed": ["Murrieta", "Temecula", "Menifee", "Bear Creek", "La Cresta"]
