---
// src/pages/services.astro
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';

import kitchenImage from '../assets/hero-kitchen.jpg';
import bathroomImage from '../assets/bathroom-remodel.jpg';
import builtinImage from '../assets/builtin-1.jpg';
import fireplaceImage from '../assets/fireplace.jpg';
import closetImage from '../assets/builtin.jpg';

const phone = "(951) 973-1265";

const faqs = [
  {
    question: "What custom cabinetry services does First Class WoodWorks offer?",
    answer: "We offer a full range of custom cabinetry and finish carpentry services including custom kitchen cabinets, kitchen remodeling, bathroom vanities, entertainment centers, fireplace surrounds, and walk-in closet built-ins. Every project is designed, built, and installed by our own team in Murrieta — never subcontracted."
  },
  {
    question: "How much do custom cabinets cost in Murrieta?",
    answer: "Custom kitchen cabinets range from $500 to $1,200+ per linear foot depending on wood species, finish, and design complexity. Bathroom vanities run $400 to $3,000, and built-in entertainment centers start at $1,200 for simple units up to $11,000+ for large multi-piece designs. Our pricing reflects furniture-grade plywood, Blum soft-close hardware, and dovetail joinery — materials that outlast big-box alternatives by decades."
  },
  {
    question: "Why should I choose custom cabinets over Home Depot or IKEA?",
    answer: "Retail cabinets use particle board that swells in Southern California's heat and typically fails within 5 to 10 years. Our custom cabinets are built from furniture-grade plywood with dovetail joinery, measured to the 1/16th of an inch for a perfect fit, and finished with post-catalyzed conversion varnish that resists heat, moisture, and daily wear for a lifetime. Custom cabinetry also increases your home's appraisal value — big-box cabinets do not."
  },
  {
    question: "Do you use subcontractors for any of your work?",
    answer: "Never. Our own licensed, bonded, and insured employees handle every cut, every joint, every finish coat, and every installation. This is how we maintain the precision and quality control that defines First Class WoodWorks. When you hire us, you are hiring the craftsmen who will physically be in your home."
  },
  {
    question: "What areas do you serve for custom cabinetry?",
    answer: "We are based in Murrieta at 24491 Avenida Arconte and serve the entire Temecula Valley including Temecula, Menifee, Wildomar, Fallbrook, Lake Elsinore, French Valley, Winchester, Canyon Lake, and Perris. Call (951) 973-1265 for a free in-home consultation anywhere in our service area."
  },
  {
    question: "How long does a custom cabinet project take from start to finish?",
    answer: "From design approval to professional installation, most projects take 8 to 12 weeks. This includes laser measurement, full 3D rendering approval, material procurement, in-shop fabrication with dovetail joinery, post-catalyzed conversion varnish curing, and careful on-site installation with HEPA dust extraction and floor protection."
  }
];

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "HomeAndConstructionBusiness",
      "@id": "https://firstclasswoodworks.com/#business",
      "name": "First Class WoodWorks",
      "url": "https://firstclasswoodworks.com",
      "telephone": "(951) 973-1265",
      "image": "https://firstclasswoodworks.com/assets/logo.png",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "24491 Avenida Arconte",
        "addressLocality": "Murrieta",
        "addressRegion": "CA",
        "postalCode": "92562",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "33.5539",
        "longitude": "-117.2139"
      },
      "areaServed": [
        { "@type": "City", "name": "Murrieta", "sameAs": "https://en.wikipedia.org/wiki/Murrieta,_California" },
        { "@type": "City", "name": "Temecula", "sameAs": "https://en.wikipedia.org/wiki/Temecula,_California" },
        { "@type": "City", "name": "Menifee", "sameAs": "https://en.wikipedia.org/wiki/Menifee,_California" },
        { "@type": "City", "name": "Wildomar" },
        { "@type": "City", "name": "Fallbrook" },
        { "@type": "City", "name": "Lake Elsinore" },
        { "@type": "City", "name": "French Valley" },
        { "@type": "City", "name": "Winchester" },
        { "@type": "City", "name": "Canyon Lake" },
        { "@type": "City", "name": "Perris" }
      ],
      "priceRange": "$$$",
      "knowsAbout": [
        "Custom Kitchen Cabinets", "Kitchen Remodeling", "Bathroom Vanities",
        "Entertainment Centers", "Fireplace Built-Ins", "Custom Closet Systems",
        "Finish Carpentry", "Cabinet Making", "Dovetail Joinery",
        "Post-Catalyzed Conversion Varnish", "Blum Soft-Close Hardware"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Custom Cabinetry & Finish Carpentry Services",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Custom Kitchen Cabinets", "url": "https://firstclasswoodworks.com/services/custom-kitchen-cabinets" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Kitchen Remodeling", "url": "https://firstclasswoodworks.com/services/kitchen-remodeling" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Bathroom Remodeling", "url": "https://firstclasswoodworks.com/services/bathroom-remodeling" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Cabinet Maker", "url": "https://firstclasswoodworks.com/services/cabinet-maker" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Entertainment Centers & Built-Ins" } },
