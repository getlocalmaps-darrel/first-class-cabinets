        ]
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5.0",
        "reviewCount": "30"
      }
    },
    {
      "@type": "WebPage",
      "@id": "https://firstclasswoodworks.com/services",
      "name": "Our Services — Custom Cabinetry & Finish Carpentry | First Class WoodWorks",
      "description": "Explore the full range of custom cabinetry and finish carpentry services from First Class WoodWorks in Murrieta, CA. Kitchen cabinets, bathroom vanities, entertainment centers, fireplace surrounds, and closet built-ins — all built 100% in-house.",
      "url": "https://firstclasswoodworks.com/services",
      "isPartOf": { "@id": "https://firstclasswoodworks.com/#website" },
      "about": { "@id": "https://firstclasswoodworks.com/#business" },
      "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": [".services-intro", ".faq-answer"]
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://firstclasswoodworks.com" },
        { "@type": "ListItem", "position": 2, "name": "Our Services" }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    }
